<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <style>
    span{
      display: inline-block;
      background-color: aqua;
      margin-left: 10px;
      border-radius: 10px;
      padding: 5px;
    }
    .main-section{
      overflow-y: auto;
    }
  </style>
  <title>Document</title>
</head>
<body>

  <div class="container">
    <header class="bg-primary text-white p-2 text-center" style="height: 10vh;">
      <h2>
        chat application
      </h2>
    </header>

    <main>
      <div class="main-section p-3" id="messagesSection" style="height: 75vh; background-color: aquamarine;">
      </div>

      <div class="row">
        <div class="col-10">
        <textarea name="message" id="message" col="100" rows="2" style="width: 100%;"></textarea>
        </div>
        <div class="col-2">
          <button class="btn btn-primary"  id="send" style="width: 100%; height: 100%;">send</button>
        </div>
      </div>
    </main>
  </div>







  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    var socket = io();

    var send = document.getElementById('send');

    var input = document.getElementById('message');

    var messagesSection = document.getElementById('messagesSection');

    send.addEventListener('click', function(e) {
    if (input.value) {
      socket.emit('chat message', input.value);
      input.value = '';
    }
  });


  socket.on('message', function(msg) {
    var item = document.createElement('p');
    item.innerHTML = `<span> ${msg} </span>`;
    messagesSection.appendChild(item);
    messagesSection.scrollTo(0,messagesSection.scrollHeight)
  });



  </script>
    
</body>
</html>